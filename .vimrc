syntax on
set number
set hidden
set ignorecase
set smartcase
set incsearch
set hlsearch
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set smartindent
set backspace=indent,eol,start
set wildignore+=*/tmp/*,*/build/*,*.so,*.swp,*.zip
set showmatch
filetype plugin indent on
set background=dark
